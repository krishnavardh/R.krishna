#include<stdio.h>
#include<string.h>
void substring(char str[],int n)
{
	int x,i,k,j;
	 for(i=1;i<=n;i++)
	 {
	 	for(j=0;j<n-1;j++)
	 	{
	 		int x=j+1;
	 		for(k=j;k<x;k++)
	 		printf("%c",str[k]);
	 		printf("\n");
		 }
	 }
}
int main()
{
	char str[]="abcd";
	substring(str, strlen(str));
	return 0;
}
	
	
Output:
	a
	b
	c
	d
	ab
	bc
	abc
	bcd
	abcd
	
